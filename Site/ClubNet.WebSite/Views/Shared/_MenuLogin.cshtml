@using Microsoft.AspNetCore.Identity
@using ClubNet.WebSite.Domain.User;
@using ClubNet.WebSite.Controllers;
@using Microsoft.Extensions.Localization;

@inject IStringLocalizer<AccountController>  _localizer;

@inject SignInManager<UserInfo> _signInManager
@inject UserManager<UserInfo> _userManager
@inject IRequestService _requestService;

@if (_signInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Edit" asp-route-lang="@_requestService.CurrentLanguage">@_userManager.GetUserName(User)!</a></li>
        <li><a asp-controller="Account" asp-action="Logout" asp-route-lang="@_requestService.CurrentLanguage">@_localizer["Logout"]</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register" asp-route-lang="@_requestService.CurrentLanguage">@_localizer["Register"]</a></li>
        <li><a asp-controller="Account" asp-action="Login" asp-route-lang="@_requestService.CurrentLanguage">@_localizer["Login"]</a></li>
    </ul>
}