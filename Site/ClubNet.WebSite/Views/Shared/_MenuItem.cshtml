@using ClubNet.WebSite.ViewModel.Menus;

@model MenuItemVM;

@{
    if (Model is MenuLinkItemVM link)
    {
        <li><a asp-area="" asp-controller="@link.Controller" asp-action="@link.Action">@link.Label</a></li>
    }
    else if (Model is MenuVM menu)
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@menu.Label <span class="caret"></span></a>
            <ul class="dropdown-menu">
                @foreach (var menuItem in menu.Items)
                {
                    @await Html.PartialAsync("_MenuItem", menuItem);
                }
            </ul>
        </li>
    }
}
