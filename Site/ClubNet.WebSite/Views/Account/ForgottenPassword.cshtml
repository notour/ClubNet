@inject IStringLocalizer<AccountController>  _localizer;
@inject IFileService _fileService;
@inject IClubDescriptor _clubDescriptor;
@inject IRequestService _requestService;

<div class="row margin-top-medium">
    <div class="col-sm-1 hidden-xs">
        <section>
            <img class="medium-logo" src="@_fileService.GetHtmlPath(SiteResources.SquareLogo)" />
        </section>
    </div>
    <div class="col-sm-10 col-sm-offset-1 col-xs-12">
        <section>
            <div>
                <form method="post" asp-controller="Account" asp-action="ForgottenPasswordForm" asp-route-lang="@_requestService.CurrentLanguage"
                      class="form-horizontal">
                    <h4>@_localizer["ForgottenPassword", _clubDescriptor.DisplayName]</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">@_localizer["Email"]</label>
                        <div class="col-sm-10 col-sm-offset-1">
                            <input class="form-control" id="Email" name="Email" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">@_localizer["RecoverPassword"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
