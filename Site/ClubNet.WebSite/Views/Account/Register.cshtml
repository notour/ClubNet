@inject IStringLocalizer<AccountController>  _localizer;
@inject IFileService _fileService;
@inject IClubDescriptor _clubDescriptor;
@inject IRequestService _requestService;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model PageViewModel<RegisterFormVM>
@{
    var VM = Model.ViewModel;
}

<div class="row margin-top-medium">
    <div class="col-sm-4 hidden-xs">
        <section>
            <img class="big-logo" src="@_fileService.GetHtmlPath(SiteResources.SquareLogo)" />
        </section>
    </div>
    <div class="col-sm-4 col-sm-offset-2 col-xs-12">
        <section>
            <div>
                <form method="post" asp-controller="Account" asp-action="RegisterForm" asp-route-lang="@_requestService.CurrentLanguage">
                    <h4>@_localizer["RegisterTitle", _clubDescriptor.DisplayName]</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ViewModel.Email">@_localizer["Email"]</label>
                        <input asp-for="ViewModel.Email" class="form-control" name="Email" />
                        <span asp-validation-for="@VM.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ViewModel.Password">@_localizer["Password"]</label>
                        <input asp-for="ViewModel.Password" class="form-control" name="Password"/>
                        <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ViewModel.ConfirmationPassword">@_localizer["ConfirmPassword"]</label>
                        <input asp-for="ViewModel.ConfirmationPassword" class="form-control" name="ConfirmationPassword" />
                        <span asp-validation-for="ViewModel.ConfirmationPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <partial name="_ReCaptcha" />
                    </div>

                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-default">@_localizer["Register"]</button>
                    </div>
                </form>
            </div>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
